---
import dataList from "../data/user.json";
import Link from "./Link.astro";

const items = dataList.links;
---

<div class="list" id="list">
  <h2 class="center">Links</h2>
  {
    items.map((item) => {
      return (
        <Link
          icon={item.icon}
          title={item.title}
          description={item.description}
          url={item.url}
        />
      );
    })
  }
</div>

<style>
  .center {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .list {
    margin-top: 2rem;
    display: grid;
    gap: 1rem;
  }
</style>
